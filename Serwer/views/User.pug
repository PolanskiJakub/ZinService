extends trueLayoutBefore1.pug
block content
  h1=title
  form(method='POST' action='')
    div.form-group
      label(for='login') Login:
      input#login(type='text', placeholder='Login' name='login' required='true' value=(undefined===user ? '' : user.login))
      label(for='password') Password:
      input#password(type='password', placeholder='Password' name='password' required='true' value=(undefined===user  ? '' : user.password))
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg

        